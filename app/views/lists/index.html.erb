<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'cinema.jpg' %>);">
  <div class="container">
    <h1>Bookmark your favorite movies!</h1>
    <%= link_to 'Create a movie list', new_list_path, class: 'mt-3 btn btn-success' %>
  </div>
</div>
<div class="container">
  <h2>My lists:</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-4">
        <%= link_to list_path(list), class: 'card-category-wrap' do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(
            <% if list.photo.attached? %>
              <%= cl_image_path list.photo.key %>
            <% else %>
              <%= asset_path 'cinema.jpg' %>
            <% end %>);">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
